{{#partial "content"}}
<div class="col-3">
    <div class="list-group list-group-flush">
      <a href="#" class="list-group-item list-group-item-dark list-group-item-action" aria-current="true">
        
        All Departments
      </a>
      {{#each myDepartments}}
      <a href="#" class="list-group-item list-group-item-dark list-group-item-action">{{name}}</a>
      {{/each}}   
    </div>
  </div>


<div class="col-9">
<h4>Departments</h4>
<table class="table ">

  <thead class="table-dark">
    <tr >
      <th>Name</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>

    {{#each myDepartments}}
      <tr>
      <td>{{name}}</td>
      <td>
        <a class="btn btn-sm btn-warning"href="/departments/update?id={{id}}">Update</a>
        <a class="btn btn-sm btn-danger" href="/departments/delete?id={{id}}">Delete</a>
      </td>
    </tr>
      {{/each}}   
    
  </tbody>

</table>

</div>
{{/partial}}

{{> layout.hbs}} 

