{{#partial "content"}}
    <h1 class="text-center">Welcome to the technology Department</h1>
    <div class="col-12 bg-white">
        <h4 class="text-center">All Staff</h4>
        {{#if myStaff}}
            <table class="table table-striped table-hover">
                <thead>
                <tr><th>Name</th><th>Role</th><th>Department</th></tr>
                </thead>
                <tbody>
                {{#each myStaff}}
                    <tr>
                        <td>{{name}}</td>
                        <td>{{role}}</td>
                        <td>{{department}}</td>
                    </tr>
                {{/each}}
                </tbody>
            </table>
        {{else}}
            <h5 class="text-center">No record found click <a href="/add">here</a> to add a record</h5>
        {{/if}}
    </div>

{{/partial}}

{{> layout.hbs}}